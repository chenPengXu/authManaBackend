body, html
    -webkit-text-size-adjust none
    -webkit-font-smoothing antialiased
    margin 0
    position relative
    height 100%
    font-size 14px
    line-height 1.5
label
em
    font-weight normal
    margin 0
div
    box-sizing border-box
h1,h2,h3,h4,h5,h6
    font-size 42px
    font-weight normal
    margin 0
p
    margin 0
ul,li
    padding 0
    margin 0
    list-style none
a
a:hover
    text-decoration none
.img-c img
    width 100%
    vertical-align middle
    border none
.img-p
    position relative
.row:after
    content ""
    width 0
    height 0
    display block
    clear both
textarea:focus
input:focus
    outline none

animation(args...)
    animation args
    -webkit-animation args
transform(args...)
    transform args
    -webkit-transform args
